{
    "title": "posts",
    "_links": {
        "profile": {
            "href": "/schema/index/schema/post"
        }
    },
    "_index": {
		"key": "date-created"
	},

    "_processors": [{
        "processorFactory": "_embed",
        "options": {
			"fs:entries": {
				"max": 2,
				"properties": ["title", "author", "date-created", "excerpt"]
			}
		}
	}, {
    	"processorFactory": "forEach",
    	"options": {
    		"processorFactory": "extend",
    		"options": {
				"property": "_embedded.fs:entries",
				"key": "_links.self.href",
				"options": {
					"obj": {
						"_markdown": {
							"input": "excerpt",
							"output": "excerptHtml"
						}
					}
				}
			}
		}
	}, {
    	"processorFactory": "_sort",
    	"options": {
			"property": "_links.fs:entries",
			"key": "date-created",
			"ascending": false,
			"compare": "date"
		}
	}]
}
