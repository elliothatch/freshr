{
	"compilerOptions": {
		"module": "commonjs",
		"target": "esnext",

		"declaration": true,
		"declarationDir": "declarations",
		"outDir": "build",
		"sourceMap": true,

		"strict": true,

		"experimentalDecorators": true,
		"preserveConstEnums": true
	},
	"references": [{
		"path": "../.."
	}],
	"include": [
		"src/**/*",
		"../../types"
	],
	"baseUrl": ".",
	"paths": {
		"freshr/*": [
			"../../src/*"
		],
		"*": [
			"../../node_modules/*"
		]
	}
}
